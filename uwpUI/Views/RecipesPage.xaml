<Page
    x:Class="uwpUI.Views.CookingRecipesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="using:Caliburn.Micro"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:uwpUI.ViewModels"
    xmlns:models="using:uwpUI.Core.Models"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <ContentControl cm:View.Model="{Binding}" cm:View.Context="MasterView" />
        </DataTemplate>

        <DataTemplate x:Key="DetailsTemplate">
            <ContentControl cm:View.Model="{Binding}" cm:View.Context="DetailsView" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
        </DataTemplate>

        <DataTemplate x:Key="NoSelectionContentTemplate">
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <TextBlock
                    x:Uid="CookingRecipes_NoSelection"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextAlignment="Center" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="MasterHeaderTemplate">
            <StackPanel Orientation="Horizontal">
                <RadioButton GroupName="recipeType" IsChecked="True"
                    x:Uid="Recipes_Type_Cooking" cm:Message.Attach="LoadDataAsync('Cooking')"/>
                <RadioButton GroupName="recipeType"
                    x:Uid="Recipes_Type_Alchemy"  cm:Message.Attach="LoadDataAsync('Alchemy')"/>
            </StackPanel>

            <!--<TextBlock
                    x:Name="headerText"
                    Text="Recipes"
                    VerticalAlignment="Center"
                    Style="{StaticResource ListTitleStyle}" />-->
        </DataTemplate>

    </Page.Resources>

    <Grid x:Name="ContentArea">

        <controls:MasterDetailsView
            x:Name="MasterDetailsViewControl"
            x:Uid="Recipes"
            BackButtonBehavior="Automatic"
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
            BorderBrush="Transparent"
            DetailsTemplate="{StaticResource DetailsTemplate}"
            MasterHeaderTemplate="{StaticResource MasterHeaderTemplate}"
            ItemsSource="{x:Bind ViewModel.Items}"
            ItemTemplate="{StaticResource ItemTemplate}"
            
            Loaded="MasterDetailsViewControl_Loaded"
            NoSelectionContentTemplate="{StaticResource NoSelectionContentTemplate}"
            SelectedItem="{x:Bind ViewModel.ActiveItem, Mode=TwoWay}">
 
        </controls:MasterDetailsView>
    </Grid>
</Page>
